{
  "name": "ollie.relph.me",
  "private": true,
  "dependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-rss": "^1.0.7",
    "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.3",
    "@tbranyen/jsdom": "^13.0.0",
    "concurrently": "^4.1.2",
    "html-minifier": "^4.0.0",
    "image-size": "^0.8.3",
    "json-to-scss": "^1.5.0",
    "sass": "^1.26.3",
    "semver": "^6.3.0",
    "slugify": "^1.4.0",
    "stalfos": "github:hankchizljaw/stalfos#c8971d22726326cfc04089b2da4d51eeb1ebb0eb"
  },
  "devDependencies": {
    "bl": "^3.0.0",
    "cross-env": "^5.2.1",
    "markdown-it": "8.4.2",
    "nunjucks": "^3.2.3",
    "prettier": "^1.19.1"
  },
  "scripts": {
    "sass:tokens": "pnpx json-to-scss src/_data/tokens.json src/scss/_tokens.scss",
    "sass:process": "pnpm run sass:tokens && sass src/scss/global.scss src/_includes/assets/css/global.css --style=compressed",
    "start": "concurrently \"pnpm run sass:process -- --watch\" \"pnpm run cms:bundle -- --watch\" \"pnpm run serve\"",
    "serve": "cross-env ELEVENTY_ENV=development pnpm eleventy --serve",
    "production": "rm -rf ./dist || true && pnpm run sass:process && pnpm eleventy"
  }
}
